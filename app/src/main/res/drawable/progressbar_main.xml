<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>

            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#FF8383"
                android:startColor="#FF3131" />

            <corners android:radius="@dimen/dp_10" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#B35E5E"
                    android:startColor="#FFCC34" />
                <corners android:radius="@dimen/dp_10" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#38C7FF"
                    android:startColor="#309FCA" />
                <corners android:radius="@dimen/dp_10" />
            </shape>
        </clip>
    </item>
</layer-list>